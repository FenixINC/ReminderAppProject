<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="showProgress"
            type="boolean" />

        <variable
            name="showResetPassword"
            type="boolean" />

        <variable
            name="title"
            type="String" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_remind" />

            <TextView
                style="@style/SansationBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{title}"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:text="Some description" />

            <LinearLayout
                android:id="@+id/area_login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/background_white"
                android:orientation="vertical"
                android:paddingEnd="16dp"
                android:paddingStart="16dp">

                <TextView
                    android:id="@+id/username_text"
                    style="@style/SansationLight"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="16sp"
                    android:visibility="@{showResetPassword ? View.VISIBLE : View.GONE}"
                    tools:text="Username"
                    tools:visibility="gone" />

                <EditText
                    android:id="@+id/username"
                    style="@style/SansationLight"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Username"
                    android:inputType="text"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="16sp"
                    android:visibility="@{showResetPassword ? View.GONE : View.VISIBLE}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey" />

                <EditText
                    android:id="@+id/password"
                    style="@style/SansationLight"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginTop="12dp"
                    android:background="@android:color/transparent"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColor="@color/text"
                    android:textColorHint="@color/text"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_reset_password"
                    style="@style/SansationBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/background_white"
                    android:text="Reset Password"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:visibility="@{showResetPassword ? View.VISIBLE : View.GONE}"
                    tools:visibility="gone" />

                <Button
                    android:id="@+id/btn_create"
                    style="@style/SansationBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/background_white"
                    android:text="Create account"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:visibility="@{showResetPassword ? View.GONE : View.VISIBLE}" />

                <Button
                    android:id="@+id/btn_cancel"
                    style="@style/SansationBold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="2"
                    android:background="@drawable/background_white"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:textColor="@color/text"
                    android:textSize="16sp"
                    android:visibility="@{showResetPassword ? View.GONE : View.VISIBLE}" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/show_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B2000000"
            android:visibility="@{showProgress ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </FrameLayout>
    </FrameLayout>
</layout>